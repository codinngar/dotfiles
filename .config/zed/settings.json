{
    "vim_mode": true,
    "tab_size": 4,
    "ui_font_size": 18,
    "buffer_font_size": 22,
    "ui_font_family": "JetBrains Mono",
    "buffer_font_family": "JetBrains Mono",
    "icon_theme": "Material Icon Theme",
    "theme": {
        "mode": "system",
        "light": "VSCode Dark Modern",
        "dark": "One Dark"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 500
        }
    },
    "scrollbar": {
        "show": "never"
    }
}
